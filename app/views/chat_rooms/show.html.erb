<div class="flex-1">
  <div class="mb-4">
    <%= link_to "戻る", chat_rooms_path %>
  </div>
  <h2 class="text-2xl font-bold">チャットルーム: <%= @room.name %></h2>
  <div data-controller="chat" data-chat-room-id-value="<%= @room.id %>">
    <div data-chat-target="chats">
      <% @chats.each do |chat| %>
        <p><strong><%= chat.user_name %>:</strong> <%= chat.content %></p>
      <% end %>
    </div>
    <%= form_with(model: ChatRoom.new, class: "contents", data: { action: "submit->chat#send"}) do |form| %>
      <div class="my-5">
        <%= form.text_field :user_name, data: { chat_target: "user" }, class: "shadow-sm rounded-md border px-3 py-2 mt-2 w-50 border-gray-400 focus:outline-blue-600", placeholder: "名前を入力" %>
        <%= form.text_field :content, data: { chat_target: "content" }, class: "shadow-sm rounded-md border px-3 py-2 mt-2 w-50 border-gray-400 focus:outline-blue-600", placeholder: "メッセージを入力" %>
        <%= form.submit "送信", class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
